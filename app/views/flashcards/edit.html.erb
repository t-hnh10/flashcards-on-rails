<%= form_with model: @flashcard, local:true do |form| %>
    <p>
        <%=label(:front, 'Term')%>
        <%= form.text_field :front, required: false, minlength: 1%>
    </p>
    <p>
        <%=label(:transliteration, 'Transliteration')%>
        <%= form.text_field :transliteration, required: false%>
    </p>
    <p>
        <%=label(:back, 'Definition')%>
        <%= form.text_field :back, required: false, minlength: 1%>
    </p>
    <%= form.submit "Update flashcard", class:"button"%>
    <p><%= link_to "Back", flashcards_index_path %></p>
<%end%>